<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Group Chat - <%= group.name %></title>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-gradient-to-br from-[#005f73] via-[#0a9396] to-[#94d2bd] font-sans flex flex-col h-screen w-full m-0 p-0">

<!-- Header -->
<div class="w-full flex items-center justify-between px-6 py-3 bg-white/20 backdrop-blur-md border-b border-white/30 sticky top-0 z-10">
  <div class="flex items-center gap-3">
    <div class="bg-[#0a9396] w-12 h-12 flex items-center justify-center rounded-full border border-white text-white font-bold text-3xl">
      <%= group.name.charAt(0).toUpperCase() %>
    </div>
    <h1 class="text-xl font-bold text-white"><%= group.name %></h1>
  </div>
  <a href="/student/group-list"
     class="bg-[#005f73] hover:bg-[#0a9396] text-white px-4 py-1 rounded-full font-semibold transition">
     Back
  </a>
</div>

<!-- Chat Box -->
<div id="chatBox" class="flex-1 overflow-y-auto px-6 py-4 flex flex-col gap-2">
  <!-- Messages will appear here -->
</div>

<!-- Input Box -->
<div class="w-full px-6 py-3 bg-white/20 backdrop-blur-md border-t border-white/30 flex gap-2">
  <input type="text" id="msgInput" placeholder="Type a message..."
         class="flex-1 p-2 rounded-l-2xl border border-white/30 focus:outline-none focus:ring-2 focus:ring-[#0a9396]" />
  <button id="sendBtn"
          class="bg-[#005f73] hover:bg-[#0a9396] px-4 py-2 rounded-r-2xl text-white font-semibold transition">
    Send
  </button>
</div>

<script>
const socket = io();
const chatBox = document.getElementById('chatBox');
const input = document.getElementById('msgInput');
const sendBtn = document.getElementById('sendBtn');

const room = "<%= group.id %>";
const studentName = "<%= student.username %>";
const studentId = "<%= student.id %>";

// Join Group Room
socket.emit("joinGroupRoom", { room, name: studentName });

// Display old messages
socket.on("oldMessages", (messages) => {
  messages.forEach(msg => appendMessage(msg));
});

// Display notifications
socket.on("groupNotification", (notification) => {
  appendNotification(notification);
});


// Display new incoming messages
socket.on("receiveGroupMessage", (msg) => {
  appendMessage(msg);
});


// Send message
sendBtn.addEventListener("click", sendMessage);
input.addEventListener("keypress", (e) => {
  if (e.key === "Enter") sendMessage();
});

function sendMessage() {
  const msg = input.value.trim();
  if (!msg) return;

  socket.emit("groupMessage", {
    room,
    fromStudentId: studentId,
    message: msg
  });
  input.value = "";
}

function appendMessage(msg) {
  console.log('Student messg:',msg);
  
  const messageHTML = msg.fromStudentId === studentId
    ? `<div class="self-end bg-[#0a9396] text-white p-2 rounded-xl max-w-[70%] ml-auto break-words mb-2">
          <span>${msg.message}</span>
            <span class="block text-right text-sm"> ${msg.time} </span>
      </div>
`
    : `<div class="self-start bg-white/70 text-black p-2 rounded-xl max-w-[70%] break-words mb-2">
         <span class="font-bold text-[#005f73] block mb-1">${msg.senderName}</span>
         <span> ${msg.message}</span>
         <br>
        <span class="block text-right text-sm"> ${msg.time} </span>

       </div>`;
  chatBox.innerHTML += messageHTML;
  chatBox.scrollTop = chatBox.scrollHeight;
}

function appendNotification(notification) {
  const notificationHTML = `<p class="self-center text-sm text-gray-200 italic mb-2">${notification}</p>`;
  chatBox.innerHTML += notificationHTML;
  chatBox.scrollTop = chatBox.scrollHeight;
}
</script>

</body>
</html>
