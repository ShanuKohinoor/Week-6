<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Login</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"> 

</head>
<body class="flex justify-center items-center h-screen bg-gradient-to-br from-[#005f73] via-[#0a9396] to-[#94d2bd] m-0 p-0">

  <!-- Login -->
  <div class="bg-white/95 w-[500px] p-8 rounded-xl shadow-[0_15px_40px_rgba(0,0,0,0.3)] text-[#0a9396] text-center">

    <!-- Title -->
    <h1 class="text-2xl font-bold mb-6"><%= title %></h1>
        <i class="fa-solid  fa-user-graduate text-black text-5xl mb-5"></i>

    <!-- Login Form -->
    <form action="/student/login" method="post" class="flex flex-col">


      <!-- Email -->
      <div class="relative my-3">
        <i class="fa-solid fa-envelope absolute left-8 top-1/2 -translate-y-1/2 text-[#0a9396]"></i>
        <input type="email" name="email" placeholder="Enter an email" autocomplete="new-email"
             class="w-[90%] p-3 pl-10  my-2 mx-auto rounded-lg border border-[#0a9396] text-[14px] focus:outline-none focus:ring-2 focus:ring-[#0a9396]" required>
            </div>

      <!-- Password -->
      <div class="relative my-3">
      <i class="fa-solid fa-lock absolute left-8 top-1/2 -translate-y-1/2 text-[#0a9396]"></i>
      <input type="password" name="password" placeholder="Password"  autocomplete="new-password"
             class="w-100 p-3 pl-10 my-2 mx-auto rounded-lg border border-[#0a9396] text-[14px] focus:outline-none focus:ring-2 focus:ring-[#0a9396]" required>
      </div>

<!-- Submit Button -->
<button type="submit"
   class="w-90 mt-5 px-5 py-3 bg-gradient-to-br from-[#094d4f] to-[#0a9396] text-white font-bold rounded-lg hover:from-[#0a9396] hover:to-[#0e7c7b] hover:-translate-y-1 hover:shadow-[0_6px_15px_rgba(0,0,0,0.3)] transition duration-300 block mx-auto text-center">
  Login
</button>

<!-- Back Button -->
<a href="/"
   class="w-90 mt-5 px-5 py-3 bg-gradient-to-br from-[#094d4f] to-[#0a9396] text-white font-bold rounded-lg hover:from-[#0a9396] hover:to-[#0e7c7b] hover:-translate-y-1 hover:shadow-[0_6px_15px_rgba(0,0,0,0.3)] transition duration-300 block mx-auto text-center">
  ‚Üê Back to Welcome Page
</a>

          </form>
    </div>

  <!-- Show Credentials Box -->
<div class="absolute top-10 right-10 ">
  <button id="showCreds" 
          class="px-4 py-2 bg-[#0a9396] text-white rounded-lg font-semibold  hover:bg-[#005f73] transition duration-300">
    Show Demo Credentials
  </button>

  <div id="credBox" class="mt-3 p-4 bg-white rounded-lg shadow-lg hidden w-64">
    <h3 class="font-bold text-[#0a9396] mb-2">Student Credentials</h3>
    <p>Email: <span class="font-semibold">shahanas@gmail.com</span></p>
    <p>Password: <span class="font-semibold">45678</span></p>
  </div>
</div>

<script>
  const showBtn = document.getElementById('showCreds');
  const credBox = document.getElementById('credBox');

  showBtn.addEventListener('click', () => {  
    credBox.classList.toggle('hidden');
  });

</script>
</body>
</html>