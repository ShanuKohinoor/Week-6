<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Chat - <%= receiver.name %></title>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-gradient-to-br from-[#005f73] via-[#0a9396] to-[#94d2bd] font-sans flex flex-col h-screen m-0 p-0">

  <!-- Header -->
  <div class="w-full flex items-center justify-between px-6 py-3 bg-white/10 backdrop-blur-md border-b border-white/30 sticky top-0 z-10">
    <div class="flex items-center gap-4">
      <div class="bg-[#0a9396] w-10 h-10 flex items-center justify-center rounded-full border border-white text-white font-bold text-lg">
        <%= receiver.name.charAt(0).toUpperCase() %>
      </div>
      <h1 class="text-xl font-bold text-white">
        <%= receiver.name %>
      </h1>
    </div>

    <a href="/student/privateChatList" class="bg-[#0a9396] hover:bg-[#005f73] border border-white px-4 py-1 rounded-full font-semibold transition">
      Back
    </a>
  </div>

  <!-- Chat Box -->
  <div id="chatBox" class="flex-1 overflow-y-auto px-6 py-4 flex flex-col gap-2"> <!--Old and New Messages will appear here -->
  </div>

  <!-- Input Box -->
  <div class="w-full px-6 py-3 flex gap-2 border-t border-white/30 bg-white/10 backdrop-blur-md sticky bottom-0 z-10">
    <input type="text" id="msgInput" placeholder="Type a message..."
      class="flex-1 p-2 rounded-l-2xl border border-white/30 text-black bg-white focus:outline-none focus:ring-2 focus:ring-[#0a9396]" />
    <button id="sendBtn"
      class="bg-[#005f73] hover:bg-[#0a9396] px-4 py-2 rounded-r-2xl border border-white font-semibold transition">
      Send
    </button>
  </div>

  <script>
    const socket = io();
    const chatBox = document.getElementById("chatBox");
    const input = document.getElementById("msgInput");
    const sendBtn = document.getElementById("sendBtn");

    const room = "<%= privateRoom %>";
    const senderId = Number("<%= sender.id %>");
    const receiverId = Number("<%= receiver.id %>");

    // Join private room
    socket.emit("joinPrivateRoom", room, () => {
      console.log("Joined private room!");
    });

    // Display old messages
    socket.on("oldMessages", (messages) => {
      messages.forEach(msg => appendMessage(msg));
    });

    // Display new incoming messages
    socket.on("receivePrivateMessage", (msg) => {
      appendMessage(msg);
    });

    // Send a new message
    sendBtn.addEventListener("click", sendMessage);
    input.addEventListener("keypress", (e) => {
      if (e.key === "Enter") sendMessage();
    });

    function sendMessage() {
      const msg = input.value.trim();
      if (!msg) return;

      socket.emit("privateMessage", {
        room,
        fromSenderId: senderId,
        toReceiverId: receiverId,
        message: msg
      });

      input.value = "";
    }

    // Append message (with time)
    function appendMessage(msg) {
      const messageHTML = msg.fromSenderId === senderId
        ? `<div class="self-end bg-white text-[#005f73] p-2 rounded-xl max-w-[70%] ml-auto break-words mb-2">
             <span>${msg.message}</span>
             <br>
             <span class="block text-right text-xs text-gray-400 mt-1">${msg.time}</span>
           </div>`
        : `<div class="self-start bg-[#0a9396] text-white p-2 rounded-xl max-w-[70%] break-words mb-2">
             <span>${msg.message}</span>
             <br>
             <span class="block text-right text-xs text-gray-200 mt-1">${msg.time}</span>
           </div>`;

      chatBox.innerHTML += messageHTML;
      chatBox.scrollTop = chatBox.scrollHeight;
    }
  </script>

</body>
</html>
