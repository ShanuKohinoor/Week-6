<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"> 

</head>

<body class="flex justify-center items-center h-screen bg-gradient-to-br from-[#005f73] via-[#0a9396] to-[#94d2bd] m-0 p-0">

  <!-- Login -->
  <div class="bg-white/95 p-[40px_50px] rounded-[15px] shadow-[0_15px_40px_rgba(0,0,0,0.3)] w-[350px] text-center">

    <!-- Title -->
    <h1 class="text-[24px] text-[#0a9396] font-bold mb-10"><%= title %></h1>
    <i class="fa-solid fa-user-shield text-black text-5xl mb-5"></i>
    <!-- Login Form -->
    <form action="/admin/login" method="post" class="flex flex-col" >

     <!--Email-->
      <div class="relative my-3">
        <i class="fa-solid fa-user absolute left-3 top-1/2 -translate-y-1/2 text-[#0a9396]"></i>
        <input type="email" name="email" placeholder="Enter an email" autocomplete="new-email"
               class="w-full p-3 pl-10 rounded-[10px] border border-[#0a9396] text-[16px] focus:outline-none " required>
      </div>


      <!-- Password -->
     <div class="relative my-3">
      <i class="fa-solid fa-lock absolute left-3 top-1/2 -translate-y-1/2 text-[#0a9396]"></i>
      <input type="password" name="password" placeholder="Enter Password" autocomplete="new-password"
             class="w-full p-3 pl-10 rounded-[10px] border border-[#0a9396] text-[16px] focus:outline-none" required>
     </div>
      <!-- Submit Button -->
      <button type="submit"
              class="w-full py-3 mt-4 bg-gradient-to-br from-[#0a9396] to-[#94d2bd] text-white rounded-[10px] font-medium cursor-pointer transition duration-300 hover:bg-gradient-to-br hover:from-[#005f73] hover:to-[#0e7c7b] hover:-translate-y-1 hover:shadow-[0_8px_20px_rgba(0,0,0,0.3)]">
        Login
      </button>

      <!-- Back Button -->
      <a href="/"
         class="inline-block mt-5 px-5 py-2 bg-gradient-to-br from-[#0a9396] to-[#94d2bd] text-white font-bold rounded-[8px] text-decoration-none transition duration-300 hover:bg-gradient-to-br hover:from-[#005f73] hover:to-[#0e7c7b] hover:-translate-y-1 hover:shadow-[0_6px_15px_rgba(0,0,0,0.3)]">
        ‚Üê Back to Welcome Page
      </a>

    </form>
  </div>

  <!-- Show Credentials Box -->
<div class="absolute top-10 right-10">
  <button id="showCreds" 
          class="px-4 py-2 bg-[#0a9396] text-white rounded-lg font-semibold hover:bg-[#005f73] transition duration-300">
    Show Credentials
  </button>

  <div id="credBox" class="mt-3 p-4 bg-white rounded-lg shadow-lg hidden w-64">
    <h3 class="font-bold text-[#0a9396] mb-2">Admin Credentials</h3>
    <p>User Email: <span class="font-semibold">admin@gmail.com</span></p>
    <p>Password: <span class="font-semibold">12345</span></p>
  </div>
</div>

<script>
  const showBtn = document.getElementById('showCreds');
  const credBox = document.getElementById('credBox');


      // Show the Admin login details on hover

  showBtn.addEventListener('click', () => {  
    credBox.classList.toggle('hidden');
  });




</script>


</body>
</html>
